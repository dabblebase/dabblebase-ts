{
  "compilerOptions": {
    "outDir": "dist/esm",
    "module": "ESNext",
    "target": "ES2020",
    "declaration": true,
    "emitDeclarationOnly": false,
    "moduleResolution": "Bundler",
    "strict": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "rootDir": "src",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src"]
}